extends layout

block content
	if !user
		.banner-wrapper
			h2 Please log in.
				.menu
					p.menu-item
						a(href="/auth/github") Login
	else
		.banner-wrapper
			h2 Logged in as #{user.displayName}
				.menu
					p.menu-item
						a(href="/rolodex") My Rolodex
					p.menu-item
						a(href="/logout") Log Out
		//- .my-card
			//- .card-element
			//- 	p ID: #{user.id}
