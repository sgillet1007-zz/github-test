		.myCard(class="col s12" ng-controller="roloController")
			div(class="myCard-photo")
				img(src="#{user._json.avatar_url}", ng-show="!editing")
				input(src="#{user._json.avatar_url}", ng-show="editing", placeholder="add in image")
				
			.row(class="myCard-text")
				div(class="")
